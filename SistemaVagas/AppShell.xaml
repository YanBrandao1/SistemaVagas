<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SistemaVagas.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SistemaVagas"
    Shell.FlyoutBehavior="Flyout"
    Title="SistemaVagas">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="home" />

    <ShellContent
        Title="Vagas"
        Route="VagasPage"
        Icon="icon_vagas.png"
        ContentTemplate="{DataTemplate local:VagasPage}" />

    <ShellContent
        Title="Nova Vaga"
        Route="NovaVagaPage"
        Icon="icon_vagas.png"
        ContentTemplate="{DataTemplate local:NovaVagaPage}" />

</Shell>
