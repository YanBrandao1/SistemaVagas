<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SistemaVagas.NovaVagaPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Nova Vaga">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="16">
            <Entry x:Name="nomeEntry" Placeholder="Nome da vaga" />
            <Entry x:Name="nivelEntry" Placeholder="Nível" />
            <Entry x:Name="modalidadeEntry" Placeholder="Modalidade" />
            <Entry x:Name="urlEntry" Placeholder="URL da vaga" />
            <Editor x:Name="descricaoEditor" Placeholder="Descrição da vaga" HeightRequest="120"/>

            <Button Text="Salvar Vaga" Clicked="OnSalvarClicked" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
