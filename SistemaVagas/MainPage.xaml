<ContentPage 
    x:Class="SistemaVagas.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Sistema de Vagas e Oportunidades IC">

    <VerticalStackLayout Padding="20" Spacing="15">

        <!-- 1) Ir para Vagas Pendentes -->
        <Button
      Text="Vagas Pendentes"
      Clicked="OnVagasPendentesClicked" />

        <!-- 2) Adicionar Nova Vaga -->
        <Button
      Text="Adicionar Vaga"
      Clicked="OnAdicionarVagaClicked" />

        <!-- 3) Logout -->
        <Button
      Text="Sair"
      Clicked="OnLogoutClicked" />

        <!-- 4) Deletar vagas antigas -->
        <Button
      Text="Gerenciar Vagas"
      Clicked="OnGerenciarVagasClicked" />

    </VerticalStackLayout>
</ContentPage>
