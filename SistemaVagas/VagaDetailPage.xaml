<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
  x:Class="SistemaVagas.VagaDetailPage"
  xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
  Title="Detalhes da Vaga">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label Text="{Binding Nome}"
             FontSize="28"
             FontAttributes="Bold" />

            <Label Text="Nível:" FontAttributes="Bold" />
            <Label Text="{Binding Nivel}" />

            <Label Text="Modalidade:" FontAttributes="Bold" />
            <Label Text="{Binding Modalidade}" />

            <Label Text="Descrição:" FontAttributes="Bold" />
            <Label Text="{Binding Descricao}" LineBreakMode="WordWrap" />

            <Button Text="Inscrever-se"
              Clicked="OnApplyClicked"
              HorizontalOptions="Center"
              Margin="0,20,0,0" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
