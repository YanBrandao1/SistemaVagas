<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SistemaVagas.VagasPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:models="clr-namespace:SistemaVagas.Models"
    Title="Lista de Vagas">

    <StackLayout Padding="10" Spacing="0">

        <Grid BackgroundColor="#EEE" Padding="5"
            ColumnDefinitions="3*,1*,1*,1*">
            <Label Text="Nome da Vaga"       FontAttributes="Bold" />
            <Label Text="NÃ­vel"               Grid.Column="1" FontAttributes="Bold" />
            <Label Text="Modalidade"          Grid.Column="2" FontAttributes="Bold" />
            <Label Text="Localidade (Sigla)"  Grid.Column="3" FontAttributes="Bold" />
        </Grid>

        <CollectionView 
            x:Name="vagasCollectionView"
            ItemsSource="{Binding Vagas}"
            Margin="0,2,0,0"
            SelectionMode="Single"
            SelectionChanged="OnVagaSelected">  
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="8"
                        ColumnDefinitions="3*,1*,1*,1*"
                        RowSpacing="4">
                        <Label Text="{Binding Nome}" 
                               FontAttributes="Bold"/>
                        <Label Text="{Binding Nivel}"              Grid.Column="1" />
                        <Label Text="{Binding Modalidade}"         Grid.Column="2" />
                        <Label Text="{Binding LocalidadeSigla}"    Grid.Column="3" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </StackLayout>
</ContentPage>
